{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ Name }}{% endblock %}

{% block page_description %}{{ Name }} by {{ author }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
          <img src="../img/{{ slug }}.jpg" alt="" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1>{{ Name }}</h1>
          <p>{{ blurb | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}
